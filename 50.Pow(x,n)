//-----------Time Limit Execeeded------------
public class Solution {
    public double myPow(double x, int n) {
        double res = x;
        if(n==0){
            res=1;
        }
        else if(n>0){
            for(int i=1;i<n;i++){
                res = res*x;
            }
        }
        else if(n<0){
            int p = -n;
            res = myPow(res, p);
            res = 1/res;
        }
        return res;
    }
}

//-----------Accepted-------------

public class Solution {
    public int lengthOfLongestSubstring(String s) {
        if(s.length()==0){
            return 0;
        }
        else{
            int max=0,max1=0;
            HashMap<Character, Integer> map = new HashMap<Character, Integer>();
            for(int i=0,j=0;i<s.length();i++){   //i and j are the head pointer and the tail pointer of the "dynamic window" which scan the string s from left to right. 
                if(map.containsKey(s.charAt(i))){
                    max1 = i-j;
                    j=i;
                    map.clear();
                }
                map.put(s.charAt(i), i);
                if(max1>max){
                    max = max1;
                }    
            }
            return max;
        }
    }
}

public class Solution {
    public int lengthOfLastWord(String s) {
        if(s==null||s.length()==0){
            return 0;
        }
        int i=s.length()-1;
        int count=0;
        while(i>=0){
            if(s.charAt(i)==' '&&count==0){
                i--;
            }
            else{
                if(s.charAt(i)==' '){
                    break;
                }
                count++;
                i--;
            }
        }
        return count;
    }
}
